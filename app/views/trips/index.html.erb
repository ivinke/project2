<div class="page-header">
  <h1>Trips</h1>
</div>

<p><a href="/trips/new" class="btn btn-primary">Add a New Trip</a></p>

<table class="table table-hover">


  <tbody>
    <% @trips.each do |trip| %>



      <div class="container">

      <div class="well form-inline">
      <div class = "col-sm-6">

       <div class = "fotoviaje">
        <img src = "<%= trip.photo %>">
        </div>
      </div>

        <div class = "col-sm-6">
 <div class="well well-lg">
            <div class = "row">
              <div class = "col-sm-6">
                <div class="panel panel-default">
                  <div class="panel-heading" style = "background-color:#0EBFE9;">
                    <h4 align="center" style = "height: 30px; color: white;"> From:   <%= trip.from_city.name.capitalize %></h4>
                  </div>

                </div>
              </div>

              <div class = "col-sm-6">
                <div class="panel panel-default">
                  <div class="panel-heading" style = "background-color:#0EBFE9;">
                    <h4 align="center" style = "height:30px; color: white;">To:   <%= trip.to_city.name.capitalize %></h4>
                  </div>
                </div>
              </div>
            </div>

              <div class = "row">
              <div class = "col-sm-12">
                <div class="panel panel-default">
                  <div class="panel-heading" style = "background-color:#8DB6CD;">
                      <h5 style = "height:60px; color: white; align: center;">Description: <%= trip.notes %></h5>
                  </div>
                </div>
              </div>
            </div>


              <div class = "row">
              <div class = "col-sm-4">
                <div class="panel panel-default">
                  <div class="panel-heading" style = "background-color:#63B8FF;">
                    <h5 align="center" style = "height:30px; color: white;">Price: <%= trip.cost %>$</h5>
                  </div>

                </div>
              </div>

              <div class = "col-sm-4">
                <div class="panel panel-default">
                  <div class="panel-heading" style = "background-color:#63B8FF;">
                    <h5 align="center" style = "height:30px; color: white;"> Time: <%= trip.time %> Hours</h5>
                  </div>
                </div>
              </div>

              <div class = "col-sm-4">
                <div class="panel panel-default">
                   <div align="center" class="panel-heading" style = "background-color:#63B8FF;">
                    <h5 style = "height:30px; color: white;"> Method:  <%= trip.transportation %></h5>
                  </div>

                </div>
              </div>
            </div>

            <div class = "row">

              <div class = "col-sm-6">
                <div class="panel panel-default">
                  <div class="panel-heading" style = "background-color:#104E8B;">
                    <h5 align="center" style = "height:30px; color: white;"> User: <%= trip.user.email %></h5>
                  </div>
                </div>
              </div>
               <div class = "col-sm-6">
                <div class="panel panel-default">
                  <div align="center" class="panel-heading" style = "background-color:#104E8B;">
                    <h5 style = "height:30px; color: white;"> Average Rating:   <%= trip.average %></h5>
                  </div>

                </div>
              </div>

            </div>



              <div class = "row">

               <div class = "col-sm-6">
                   <% if current_user %>

                    <form action="/create_rating" class="form-horizontal">
                      <!-- Label and input for user_id -->

                          <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.id %>">

                      <!-- Label and input for trip_id -->

                          <input type="hidden" id="trip_id" name="trip_id" placeholder="Trip" class="form-control" value="<%= trip.id %>">


                      <!-- Label and input for points -->
                      <div class="form-group">

                        <div class="col-sm-10">
                          <div class = "ratetrip">
                           <%= select_tag(:points, options_for_select(["1", "2", "3", "4", "5"]), :class => "form-control") %>
                           </div>
                        </div>
                      </div>

                      <div class="form-group">
                          <input type="submit" value="Rate trip!" class="btn btn-primary">
                      </div>
                    </form>
                   <% end %>

                </div>

            <div class="col-sm-6">


          <a href="/trips/<%= trip.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
          <% if current_user == trip.user%>
          <a href="/trips/<%= trip.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
          <a href="/delete_trip/<%= trip.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
             <% end %>
        </div>
            </div>
            </div>
            </div>


          </div>
          </div>






    <% end %>
  </tbody>
</table>




